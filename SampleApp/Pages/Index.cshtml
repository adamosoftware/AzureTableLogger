@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <p>Click below to cause unhandled exception:</p>
    <a class="btn btn-primary" asp-page-handler="Throw">Error!</a>

    <form method="post" asp-page-handler="FormError">
        <div class="form-group">
            <label>First Name:</label>
            <input type="text" name="FirstName" required="required" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Last Name:</label>
            <input type="text" name="LastName" required="required" class="form-control"/>
        </div>
        <button class="btn btn-primary" type="submit">Submit, with Error</button>
    </form>
</div>
